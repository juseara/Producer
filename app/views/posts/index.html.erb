<%- if @posts.present? -%>
  <h1>Listing posts</h1>

  <table>
    <tr>
      <th>Title</th>
      <th>Excerpt</th>
      <th>Body</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.excerpt %></td>
      <td><%= post.body %></td>
      <td><%= link_to 'Show', post %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
  </table>

<% else %>
  <p>We'll start posting soon.</p>
<% end %>

<br />

<%= link_to 'New Post', new_post_path %>